<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Gym Management System</display-name>
    <welcome-file-list>
        <welcome-file>html/welcome.html</welcome-file>
    </welcome-file-list>
    
    <!-- Participant Servlet -->
    <servlet>
        <servlet-name>ParticipantServlet</servlet-name>
        <servlet-class>com.gym.servlet.ParticipantServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ParticipantServlet</servlet-name>
        <url-pattern>/participants/*</url-pattern>
    </servlet-mapping>
    
    <!-- Batch Servlet -->
    <servlet>
        <servlet-name>BatchServlet</servlet-name>
        <servlet-class>com.gym.servlet.BatchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BatchServlet</servlet-name>
        <url-pattern>/batches/*</url-pattern>
    </servlet-mapping>
</web-app>